---
import Logo from "./Logo.astro";

const response = await fetch ('https://kings-league-api.alexherranzdev.workers.dev/teams')
const teams = await response.json()
---
<header class="flex w-screen bg-gradient-to-b from-[#ff6900] via-[#ff6900] to-[#ee6600] items-center p-8 gap-x-8">
  <Logo />
  <div class="flex flex-col gap-4 h-full">
    <nav>
      <ul class="flex gap-x-2 [&>li>a:hover]:scale-150">
      {teams.map(({id, image, name}) => (
        <li>
          <a href={`/team/${id}`} class="block transition">
            <img class="aspect-square w-12 drop-shadow-lg" src={image} alt={`Escudo equipo ${name}`} />
          </a>
        </li>
      ))}
      </ul>
    </nav>
    <nav>
      <ul class="flex gap-x-4 text-white font-semibold text-md [&>li>a]:opacity-80 [&>li>a:hover]:opacity-100 [&>li>a:hover]:underline">
        <li>
          <a href="/equipos">Equipos</a>
        </li>
        <li>
          <a href="/calendario">Calendario</a>
        </li>
        <li>
          <a href="/estadisticas">Estadisticas</a>
        </li>
        <li>
          <a href="/contacto">Contacto</a>
        </li>
        <li>
          <a href="/reglamento">Reglamento</a>
        </li>
        
      </ul>
    </nav>
  </div>
</header>